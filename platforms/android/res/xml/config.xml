<?xml version='1.0' encoding='utf-8'?>
<widget id="org.anuta.kiss" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Serial">
        <param name="android-package" value="fr.drangies.cordova.serial.Serial" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>KISS GUI</name>
    <description>
	The Kiss flight controller configurator for Android. Based on original Felix/Flyduino code of the Chrome app.
    </description>
    <author email="fedor@anuta.org" href="http://www.anuta.org">
        Anuta Software
    </author>
    <content src="main.html" />
    <icon src="icon.png" />
    <access origin="*" />
    <access origin="http://ultraesc.de/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
